generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  schemas = ["auth", "teachers", "students", "shared"]
}

enum UserRole {
  student
  teacher

  @@schema("auth")
}

model User {
  id            String    @id @default(uuid()) @db.Uuid
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?   @db.Text
  passwordHash  String?   @map("password_hash")
  role          UserRole  @default(student)
  approved      Boolean   @default(false)
  firstName     String?   @map("first_name")
  lastName      String?   @map("last_name")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")

  accounts Account[]
  sessions Session[]
  passwordResetTokens PasswordResetToken[]
  ssoTokens SsoToken[]

  @@map("users")
  @@schema("auth")
}

model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @map("user_id") @db.Uuid
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String? @db.Text
  id_token          String? @db.Text
  session_state     String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@schema("auth")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@schema("auth")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
  @@schema("auth")
}

model PasswordResetToken {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  tokenHash String   @unique @map("token_hash")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_reset_tokens")
  @@schema("auth")
}

model SsoToken {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  tokenHash String   @unique @map("token_hash")
  platform  UserRole
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sso_tokens")
  @@schema("auth")
}

model Page {
  id              String        @id @default(uuid()) @db.Uuid
  route           String        @unique
  title           String?       @db.Text
  metaDescription String?       @map("meta_description") @db.Text
  layout          String        @default("default") @db.VarChar(64)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @default(now()) @updatedAt @map("updated_at")
  sections        PageSection[]
  contentItems    ContentItem[]
  routeSections   RouteSection[]

  @@map("pages")
  @@schema("shared")
}

model ContentItem {
  id          String     @id @default(uuid()) @db.Uuid
  pageId      String?    @map("page_id") @db.Uuid
  sectionKey  String?    @map("section_key") @db.VarChar(128)
  contentType String     @map("content_type") @db.VarChar(128)
  slug        String?    @unique
  title       String?    @db.Text
  subtitle    String?    @db.Text
  description String?    @db.Text
  content     Json?
  metadata    Json?
  sortOrder   Int        @default(0) @map("sort_order")
  active      Boolean    @default(true)
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @default(now()) @updatedAt @map("updated_at")

  page               Page?                 @relation(fields: [pageId], references: [id], onDelete: Cascade)
  parentRelationships ContentRelationship[] @relation("ContentParent")
  childRelationships  ContentRelationship[] @relation("ContentChild")

  @@index([contentType, active])
  @@index([slug])
  @@index([pageId, contentType, active, sortOrder])
  @@map("content_items")
  @@schema("shared")
}

model PageSection {
  id          String   @id @default(uuid()) @db.Uuid
  pageId      String?  @map("page_id") @db.Uuid
  sectionKey  String   @map("section_key") @db.VarChar(128)
  sectionType String   @default("content") @map("section_type") @db.VarChar(64)
  title       String?  @db.Text
  subtitle    String?  @db.Text
  heading     String?  @db.Text
  subheading  String?  @db.Text
  body        String?  @db.Text
  ctaLabel    String?  @map("cta_label") @db.Text
  ctaHref     String?  @map("cta_href") @db.Text
  content     Json?
  settings    Json?
  data        Json?
  sortOrder   Int      @default(0) @map("sort_order")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  page Page? @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([pageId, sectionKey])
  @@index([pageId, sectionKey])
  @@index([active, sortOrder])
  @@map("page_sections")
  @@schema("shared")
}

model SiteSection {
  id          String   @id @default(uuid()) @db.Uuid
  sectionKey  String   @unique @map("section_key") @db.VarChar(128)
  sectionType String   @default("content") @map("section_type") @db.VarChar(64)
  content     Json?
  settings    Json?
  sortOrder   Int      @default(0) @map("sort_order")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([active, sortOrder])
  @@map("site_sections")
  @@schema("shared")
}

model RouteSection {
  id              String   @id @default(uuid()) @db.Uuid
  pageId          String   @map("page_id") @db.Uuid
  sectionKey      String   @map("section_key") @db.VarChar(128)
  sectionType     String   @default("content") @map("section_type") @db.VarChar(64)
  expectedContent Json?    @map("expected_content")
  notes           String?  @db.Text
  sortOrder       Int      @default(0) @map("sort_order")
  active          Boolean  @default(true)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @default(now()) @updatedAt @map("updated_at")

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([pageId, sectionKey])
  @@index([pageId])
  @@map("route_sections")
  @@schema("shared")
}

model ContentRelationship {
  id               String   @id @default(uuid()) @db.Uuid
  parentId         String   @map("parent_id") @db.Uuid
  childId          String   @map("child_id") @db.Uuid
  relationshipType String   @map("relationship_type") @db.VarChar(128)
  sortOrder        Int      @default(0) @map("sort_order")
  createdAt        DateTime @default(now()) @map("created_at")

  parent ContentItem @relation("ContentParent", fields: [parentId], references: [id], onDelete: Cascade)
  child  ContentItem @relation("ContentChild", fields: [childId], references: [id], onDelete: Cascade)

  @@unique([parentId, childId, relationshipType])
  @@map("content_relationships")
  @@schema("shared")
}

model MediaAsset {
  id           String   @id @default(uuid()) @db.Uuid
  filename     String   @db.Text
  originalName String   @map("original_name") @db.Text
  url          String   @db.Text
  altText      String?  @map("alt_text") @db.Text
  caption      String?  @db.Text
  mimeType     String   @map("mime_type") @db.Text
  sizeBytes    Int?     @map("size_bytes")
  dimensions   Json?
  metadata     Json?
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("media_assets")
  @@schema("shared")
}

model Faq {
  id        String   @id @default(uuid()) @db.Uuid
  category  String?  @db.Text
  question  String?  @db.Text
  answer    String?  @db.Text
  sortOrder Int      @default(0) @map("sort_order")
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("faqs")
  @@schema("shared")
}

model TeamMember {
  id        String   @id @default(uuid()) @db.Uuid
  name      String?  @db.Text
  role      String?  @db.Text
  title     String?  @db.Text
  imageUrl  String?  @map("image_url") @db.Text
  bio       String?  @db.Text
  expertise Json?
  sortOrder Int      @default(0) @map("sort_order")
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("team_members")
  @@schema("shared")
}

model AboutStat {
  id        String   @id @default(uuid()) @db.Uuid
  number    String?  @db.Text
  label     String?  @db.Text
  sortOrder Int      @default(0) @map("sort_order")
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("about_stats")
  @@schema("shared")
}

model CoreValue {
  id          String   @id @default(uuid()) @db.Uuid
  icon        String?  @db.Text
  title       String?  @db.Text
  description String?  @db.Text
  sortOrder   Int      @default(0) @map("sort_order")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("core_values")
  @@schema("shared")
}

model LessonModule {
  id                 String   @id @default(uuid()) @db.Uuid
  name               String?  @db.Text
  colorToken         String?  @map("color_token") @db.Text
  recommendedStudents String? @map("recommended_students") @db.Text
  description        String?  @db.Text
  lessonsSummary     String?  @map("lessons_summary") @db.Text
  durationSummary    String?  @map("duration_summary") @db.Text
  sortOrder          Int      @default(0) @map("sort_order")
  active             Boolean  @default(true)
  createdAt          DateTime @default(now()) @map("created_at")

  @@map("lesson_modules")
  @@schema("shared")
}

model TeacherBenefit {
  id          String   @id @default(uuid()) @db.Uuid
  title       String?  @db.Text
  description String?  @db.Text
  sortOrder   Int      @default(0) @map("sort_order")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("teacher_benefits")
  @@schema("shared")
}

model Testimonial {
  id         String   @id @default(uuid()) @db.Uuid
  quote      String?  @db.Text
  authorName String?  @map("author_name") @db.Text
  authorRole String?  @map("author_role") @db.Text
  sortOrder  Int      @default(0) @map("sort_order")
  active     Boolean  @default(true)
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("testimonials")
  @@schema("shared")
}

model Student {
  id               Int      @id @default(autoincrement())
  fullName         String   @map("full_name")
  email            String?  @db.Text
  level            String
  unitId           String   @map("unit_id")
  nativeLanguage   String?  @map("native_language") @db.Text
  guardianName     String?  @map("guardian_name") @db.Text
  guardianContact  String?  @map("guardian_contact") @db.Text
  attendanceRate   Float?   @map("attendance_rate")
  performanceLevel String?  @map("performance_level") @db.Text
  notes            String?  @db.Text
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("students")
  @@schema("teachers")
}

model Lesson {
  id         Int      @id @default(autoincrement())
  title      String
  subject    String
  description String? @db.Text
  classId    String   @map("class_id")
  date       DateTime
  startTime  String   @map("start_time")
  endTime    String   @map("end_time")
  location   String?  @db.Text
  status     String?  @db.VarChar(64)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  lessonMaterials LessonMaterial[]

  @@map("lessons")
  @@schema("teachers")
}

model Curriculum {
  id          Int      @id @default(autoincrement())
  title       String
  subject     String
  level       String
  description String?  @db.Text
  objectives  String?  @db.Text
  units       Json?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("curriculum")
  @@schema("teachers")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  @db.Text
  date        DateTime
  startTime   String   @map("start_time")
  endTime     String   @map("end_time")
  location    String?  @db.Text
  type        String?  @db.VarChar(64)
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("events")
  @@schema("teachers")
}

model Message {
  id         Int      @id @default(autoincrement())
  senderId   Int      @map("sender_id")
  receiverId Int      @map("receiver_id")
  content    String   @db.Text
  isRead     Boolean  @default(false) @map("is_read")
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("messages")
  @@schema("teachers")
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  priority  String?  @db.VarChar(64)
  createdBy Int      @map("created_by")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("announcements")
  @@schema("teachers")
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  completed Boolean  @default(false)
  dueDate   DateTime? @map("due_date")
  userId    Int      @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("tasks")
  @@schema("teachers")
}

model Material {
  id        Int      @id @default(autoincrement())
  title     String
  description String? @db.Text
  category  String
  url       String   @db.Text
  createdBy Int      @map("created_by")
  createdAt DateTime @default(now()) @map("created_at")

  lessonMaterials LessonMaterial[]

  @@map("materials")
  @@schema("teachers")
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  title     String
  url       String   @db.Text
  category  String?  @db.VarChar(128)
  userId    Int      @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("bookmarks")
  @@schema("teachers")
}

model LessonMaterial {
  id         Int      @id @default(autoincrement())
  lessonId   Int      @map("lesson_id")
  materialId Int      @map("material_id")
  createdAt  DateTime @default(now()) @map("created_at")

  lesson   Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@unique([lessonId, materialId])
  @@map("lesson_materials")
  @@schema("teachers")
}
